  <repositories>
    <repository>
      <id>flex-mojos-repository</id>
      <url>http://svn.sonatype.org/flexmojos/repository/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>funfx-repository</id>
      <url>http://funfx.rubyforge.org/maven/repository/</url>
      <releases>
        <enabled>true</enabled>
